{{> html_head }}
{{# packagelist }}
                <li class="package">
                    <div class="spk-icon">
                        <a href="{{ spk_url }}"><img src="{{ thumbnail_url.0 }}" alt="{{ displayname }}" />{{# beta }}<ins></ins>{{/ beta }}</a>
                    </div>
                    <div class="spk-desc">
                        <span class="spk-title">{{ displayname }} v{{ version }}</span><br />
                        <p class="dsm-version">Minimum DSM version: {{ firmware }}</p>
                        <p>{{ description }}</p>
                        <p>
                            <a id="{{ package }}_show" href="#nogo" onclick="Effect.toggle('{{ package }}_detail', 'blind', { duration: 0.5 }); Effect.toggle('{{ package }}_show', 'appear', { duration: 0.3 }); Effect.toggle('{{ package }}_hide', 'appear', { duration: 0.3, delay: 0.5 }); return false;">More...</a>
                            <a id="{{ package }}_hide" href="#nogo" onclick="Effect.toggle('{{ package }}_detail', 'blind', { duration: 0.5 }); Effect.toggle('{{ package }}_hide', 'appear', { duration: 0.3 }); Effect.toggle('{{ package }}_show', 'appear', { duration: 0.3, delay: 0.5 }); return false;" style="display: none;">Hide</a>
                        </p>
                        <div style="display: none;" id="{{ package }}_detail">
                            <table>
                                <tr><td>Package</td><td>{{ package }}</td></tr>
                                <tr><td>Version</td><td>{{ version }}</td></tr>
                                <tr><td>Display Name</td><td>{{ displayname }}</td></tr>
                                <tr><td>Maintainer</td><td>{{ maintainer }}</td></tr>
                                <tr><td>Arch</td><td>{{# arch}}{{.}} {{/ arch}}</td></tr>
                                <tr><td>Firmware</td><td>{{ firmware }}</td></tr>
                            </table>
                        </div>
                    </div>
                </li>
{{/ packagelist }}
{{> html_tail }}
